@{
    ViewData["Title"] = "Home";
}

<div class="container mt-5">
    <h2 class="text-center mb-5">Welcome!!</h2>

    <div class="row justify-content-center">
        <!-- Customer Section -->
        <div class="col-md-4 mb-4">
            <div class="card text-center shadow">
                <div class="card-header bg-primary text-white">
                    Customers
                </div>
                <div class="card-body">
                    <a class="btn btn-success btn-block mb-2" asp-controller="Customers" asp-action="Create">Create New</a>
                    <a class="btn btn-outline-primary btn-block" asp-controller="Customers" asp-action="Index">List</a>
                </div>
            </div>
        </div>

        <!-- Products Section -->
        <div class="col-md-4 mb-4">
            <div class="card text-center shadow">
                <div class="card-header bg-warning text-dark">
                    Products
                </div>
                <div class="card-body">
                    <a class="btn btn-success btn-block mb-2" asp-controller="Products" asp-action="Create">Create New</a>
                    <a class="btn btn-outline-warning btn-block" asp-controller="Products" asp-action="Index">List</a>
                </div>
            </div>
        </div>

        <!-- Orders Section -->
        <div class="col-md-4 mb-4">
            <div class="card text-center shadow">
                <div class="card-header bg-info text-white">
                    Orders
                </div>
                <div class="card-body">
                    <a class="btn btn-success btn-block mb-2" asp-controller="Orders" asp-action="Create">Create New</a>
                    <a class="btn btn-outline-info btn-block" asp-controller="Orders" asp-action="Index">List</a>
                </div>
            </div>
        </div>
    </div>
</div>